@model IEnumerable<CourseManager.Models.Course>
@{
    ViewData["Title"] = "Danh sách khóa học";
}

<style>
    .course-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
</style>


<div class="container mt-5">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Thêm mới
            </a>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 mb-4">
                <div class="card shadow-sm">
                    <div class="row g-0">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl"
                                     class="img-fluid rounded-start course-img"
                                     alt="Course Image" />
                            }
                            else
                            {
                                <div class="course-img" style="width: 350px; height: 300px; background-color: lightgray;">
                                    <span class="text-muted">Không có ảnh</span>
                                </div>
                            }

                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@item.courseName</h5>
                                <p class="card-text mb-1">
                                    <strong>Mã KH:</strong> @item.courseCode
                                    &nbsp;|&nbsp;
                                    <strong>Giảng viên:</strong> @item.instructor
                                </p>
                                <p class="card-text mb-1">
                                    <strong>Khai giảng:</strong>
                                    @item.startDate?.ToString("yyyy-MM-dd")
                                    <strong>Học phí:</strong>
                                    @(item.fee.HasValue ? item.fee.Value.ToString("C") : "<span class='text-muted'>-</span>")
                                </p>
                                <p class="card-text mb-3">
                                    <strong>Số lượng SV:</strong>
                                    @(item.maxStudents?.ToString() ?? "<span class='text-muted'>-</span>")
                                </p>

                                <div class="d-flex">
                                    <a asp-action="Details" asp-route-id="@item.courseId" class="btn btn-info text-white btn-sm me-2">
                                        <i class="bi bi-eye"></i> Xem
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.courseId" class="btn btn-primary btn-sm me-2">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.courseId" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <!-- Nhớ include Bootstrap 5 & Bootstrap Icons trong _Layout để các class và icon hoạt động -->
}
