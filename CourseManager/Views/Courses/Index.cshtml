@model IEnumerable<CourseManager.Models.Course>

@{
    ViewData["Title"] = "Danh sách khóa học";
}

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Thêm mới
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center">Mã Khóa Học</th>
                            <th class="text-center">Tên Khóa Học</th>
                            <th class="text-center">Giảng Viên</th>
                            <th class="text-center">Ngày Khai Giảng</th>
                            <th class="text-center">Học Phí</th>
                            <th class="text-center">Số Lượng Học Viên</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.courseCode</td>
                                <td>@item.courseName</td>
                                <td>@item.instructor</td>
                                <td>@item.startDate?.ToString("yyyy-MM-dd")</td>
                                <td>@(item.fee.HasValue ? item.fee.Value.ToString("C") : "-")</td>
                                <td>@(item.maxStudents?.ToString() ?? "-")</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.courseId" class="btn btn-sm btn-primary me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.courseId" class="btn btn-sm btn-info text-white me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.courseId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Nếu bạn dùng các icon Bootstrap (bi bi-...), nhớ đã include Bootstrap Icons trong _Layout -->
}
